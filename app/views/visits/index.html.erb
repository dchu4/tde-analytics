<!-- beginning row -->
<div class="row">
  <div class="col s12 m12 l12">
    <div class="card">
      <div class="section-card-title">
        <span class="card-title">Website Visitors Per Day</span>
      </div>
      <div class="card-content">
        <%= line_chart Visit.group_by_day(:created_at).count, ytitle: "Number of Visitors" %>
      </div>
    </div>
  </div>
</div>
<!-- ending row -->

<!-- beginning row -->
<div class="row">

  <div class="col s12 m12 l6">
    <div class="card">
      <div class="section-card-title">
        <span class="card-title">Countries</span>
      </div>
      <div class="card-content">
        <%= pie_chart Visit.group(:country).count, donut: true %>
      </div>
    </div>
  </div>

  <div class="col s12 m12 l6">
    <div class="card">
      <div class="section-card-title">
        <span class="card-title">Product Page Views</span>
      </div>
      <div class="card-content">
        <%= bar_chart Visit.group(:product_id).count, xtitle: "Number of Visitors", ytitle: "Product ID" %>
      </div>
    </div>
  </div>

</div>
<!-- ending row -->

<!-- beginning row -->
<div class="row">

  <div class="col s12 m12 l4">
    <div class="card">
      <div class="section-card-title">
        <span class="card-title">Cities</span>
      </div>
      <div class="card-content">
        <%= area_chart Visit.group(:city).count, xtitle: "City", ytitle: "Number of Users" %>
      </div>
    </div>
  </div>

  <div class="col s12 m12 l4">
    <div class="card">
      <div class="section-card-title">
        <span class="card-title">User Device OS</span>
      </div>
      <div class="card-content">
        <%= bar_chart User.group(:device_os).count, xtitle: "Number of Users", ytitle: "OS" %>
      </div>
    </div>
  </div>

  <div class="col s12 m12 l4">
    <div class="card">
      <div class="section-card-title">
        <span class="card-title">User Device Type</span>
      </div>
      <div class="card-content">
        <%= column_chart User.group(:device_type).count, xtitle: "Device Type", ytitle: "Number of Users" %>
      </div>
    </div>
  </div>

</div>
<!-- ending row -->