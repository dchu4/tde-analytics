<div class="row">
  <div class="col s12">
    <div class="card red">
      <div class="card-content">
        <span class="card-title white-text">Products</span>
        <%= bar_chart Visit.group(:product_id).count, colors: ["pink"] %>
      </div>
    </div>
  </div>
</div>

