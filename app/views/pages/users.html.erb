<div class="row">
  <div class="col s12 m6 l6">
    <div class="card center-align">
      <div class="section-card-title">
        <span class="card-title">Averages</span>
      </div>
      <div class="card-tabs">
        <ul class="tabs tabs-fixed-width">
          <li class="tab"><a href="#tab1" class="active">Visits</a></li>
          <li class="tab"><a href="#tab2">Purchases</a></li>
          <li class="tab"><a href="#tab3">Items</a></li>
        </ul>
      </div>
      <div class="card-content">
        <div id="tab1">
          Average Number of Visits Per User
          <h5><%= @avg_visits %></h5>
        </div>
        <div id="tab2">
          Average Number of Purchases Per User
          <h5><%= @avg_num_items_per_user %></h5>
        </div>
        <div id="tab3">
          Average Number of Items Purchased Per User
          <h5><%= @avg_num_pur_per_user %></h5>
        </div>
      </div>
    </div>
  </div>

  <div class="col s12 m6 l6">
    <div class="card center-align">
      <div class="section-card-title">
        <span class="card-title">Devices</span>
      </div>
      <div class="card-tabs">
        <ul class="tabs tabs-fixed-width">
          <li class="tab"><a href="#tab4" class="active">OS</a></li>
          <li class="tab"><a href="#tab5">Model</a></li>
        </ul>
      </div>
      <div class="card-content">
        <div id="tab4">
          Most Popular Operating System
          <h5 class="center-align most_frequent_os" ><%= @most_frequent_os %></h5>
        </div>
        <div id="tab5">
          Most Popular Device Model
          <h5 class="center-align most_frequent_model"><%= @most_frequent_model %></h5>
        </div>
      </div>
    </div>
  </div>
</div>

<div ng-app="app">
  <div ng-controller="usersCtrl" ng-init="usersSetup()">

    <div class="row">
      <div class="col s12 m6 l6">
        <div class="card">
          <div class="section-card-title">
            <span class="card-title">Average Session Duration Per OS</span>
          </div>
          <div class="card-content">
            <canvas id="os_version_duration" height="125"></canvas>
          </div>
        </div>
      </div>
      <div class="col s12 m6 l6">
        <div class="card">
          <div class="section-card-title">
            <span class="card-title">Average Session Duration Per Device Model</span>
          </div>
          <div class="card-content">
            <canvas id="device_type_duration" height="125"></canvas>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>