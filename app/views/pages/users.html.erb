<div class="row">
  <div class="col s12 m4 l4">
    <div class="card-panel">
      <div class="center-align">Average Number of Visits Per User</div>
      <h5 class="center-align"><%= @avg_visits %></h5>
    </div>
  </div>
  <div class="col s12 m4 l4">
    <div class="card-panel">
      <div class="center-align">Average Number of Purchases Per User</div>
      <h5 class="center-align"><%= @avg_num_items_per_user %></h5>
    </div>
  </div>
  <div class="col s12 m4 l4">
    <div class="card-panel">
      <div class="center-align">Average Number of Items Purchased Per User</div>
      <h5 class="center-align"><%= @avg_num_pur_per_user %></h5>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12 m6 l6">
    <div class="card-panel">
      <div class="center-align">Most Frequent OS</div>
      <h5 class="center-align most_frequent_os" ><%= @most_frequent_os %></h5>
    </div>
  </div>

  <div class="col s12 m6 l6">
    <div class="card-panel">
      <div class="center-align">Most Frequent Device Model</div>
      <h5 class="center-align most_frequent_model"><%= @most_frequent_model %></h5>
    </div>
  </div>
</div>

<div ng-app="app">
  <div ng-controller="usersCtrl" ng-init="usersSetup()">

    <div class="row">
      <div class="col s12 m6 l6">
        <div class="card">
          <div class="section-card-title">
            <span class="card-title">Average Session Duration Per OS</span>
          </div>
          <div class="card-content">
            <canvas id="os_version_duration" height="125"></canvas>
          </div>
        </div>
      </div>
      <div class="col s12 m6 l6">
        <div class="card">
          <div class="section-card-title">
            <span class="card-title">Average Session Duration Per Device Model</span>
          </div>
          <div class="card-content">
            <canvas id="device_type_duration" height="125"></canvas>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>