<div class="row">
  <div class="col s12 m3 l3">
    <div class="card-panel">
      <div class="center-align">Most Purchased Product</div>
      <h5 class="center-align"><%= @most_purchased_product %></h5>
    </div>
  </div>
  <div class="col s12 m3 l3">
    <div class="card-panel">
      <div class="center-align">Most Popular Color Purchased</div> 
      <h5 class="center-align"><%= @most_popular_color %></h5>
    </div>
  </div>
  <div class="col s12 m3 l3">
    <div class="card-panel">
      <div class="center-align">Most Common Quantity Purchased</div> 
      <h5 class="center-align"><%= @most_common_quantity %></h5>
    </div>
  </div>
  <div class="col s12 m3 l3">
    <div class="card-panel">
      <div class="center-align">Average Total Cost of Purchase</div> 
      <h5 class="center-align"><%= number_to_currency(@average_cost) %></h5>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12 m12 l12">
    <div class="card">
      <div class="section-card-title">
        <span class="card-title">Purchases Timeline</span>
      </div>
      <div class="card-content">
        <%= area_chart Purchase.group_by_day(:created_at).count %>
      </div>
    </div>
  </div>
</div>